<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/CartaM"
        android:layout_width="120dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="1" />

    <Button
        android:id="@+id/Pasar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_toRightOf="@+id/CartaM"
        android:text="Pasar" />

    <Button
        android:id="@+id/Robar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_toLeftOf="@+id/CartaM"
        android:text="Robar" />

    <TextView
        android:id="@+id/JugTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Jugador X"
        android:gravity="center"
        android:layout_below="@id/CartaM"
        android:layout_toRightOf="@id/Robar"
        android:layout_toLeftOf="@id/Pasar"
        android:textSize="20sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/CartaZona"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_gravity="center_vertical">

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>